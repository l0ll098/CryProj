{
    "name": "cryproj",
    "displayName": "CryProj",
    "description": "Easily edit .cryproj files",
    "version": "1.2.0-preview",
    "publisher": "l0ll098",
    "engines": {
        "vscode": "^0.10.0"
    },
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "keywords": [
        "CRYENGINE",
        "Game Development",
        "Game Engine",
        "cryproj",
        "CryProj",
        "JSON"
    ],
    "galleryBanner": {
        "color": "#303F9F",
        "theme": "dark"
    },
    "icon": "images/icon.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/l0ll098/CryProj.git"
    },
    "homepage": "https://github.com/l0ll098/CryProj/blob/master/README.md",
    "bugs": {
        "url": "https://github.com/l0ll098/CryProj/issues"
    },
    "main": "./out/extension",
    "activationEvents": [
        "onLanguage:json"
    ],
    "contributes": {
        "languages": [
            {
                "id": "json",
                "aliases": [
                    "JSON",
                    "json",
                    "CryProj"
                ],
                "extensions": [
                    ".cryproj"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "json",
                "scopeName": "source.json",
                "path": "./syntaxes/json.tmLanguage"
            }
        ],
        "jsonValidation": [
            {
                "fileMatch": "*.cryproj",
                "url": "./schemas/cryproj.schema.json"
            }
        ],
        "commands":[
            {
                "title": "Set wanted CRYENGINE version",
                "command": "CryProj.setVersion"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}